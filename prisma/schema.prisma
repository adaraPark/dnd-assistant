generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Character {
    id        Int      @id @default(autoincrement())
    type      String   @default("HERO")
    name      String
    health    Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}

model Pokemon {
    id             Int             @id @default(autoincrement())
    name           String          @unique
    species        String
    imageUrl       String?
    type           String
    level          Int             @default(1)
    baseHp         Int
    battleHp       Int
    attack         Int
    defense        Int
    specialAttack  Int
    specialDefense Int
    speed          Int
    battlesWon     Int             @default(0)
    battlesLost    Int             @default(0)
    moves          PokemonToMove[]
    createdAt      DateTime        @default(now())
    updatedAt      DateTime        @updatedAt

    @@index([name])
}

model PokemonToMove {
    id        Int     @id @default(autoincrement())
    pokemon   Pokemon @relation(fields: [pokemonId], references: [id])
    pokemonId Int
    move      Move    @relation(fields: [moveId], references: [id])
    moveId    Int

    @@unique([pokemonId, moveId])
    @@index([pokemonId, moveId])
}

model Move {
    id         Int             @id @default(autoincrement())
    name       String          @unique
    power      Int
    accuracy   Int
    attackType String
    type       String
    createdAt  DateTime        @default(now())
    updatedAt  DateTime        @updatedAt
    Pokemon    PokemonToMove[]

    @@index([name])
}
